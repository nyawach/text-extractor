{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "baseUrl": "./src",
    "strict": true,
    "noPropertyAccessFromIndexSignature": true,
    "jsx": "react-jsx",
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "vite/client",
      "@figma/plugin-typings/index",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
